<header class="container h-100 d-flex align-items-center justify-content-between px-3 border-bottom">
    <button class="btn btn-outline-secondary" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvas" aria-controls="offcanvas"><i class="fa-solid fa-bars"></i></button>

    <div id="offcanvas" class="offcanvas offcanvas-start" tabindex="-1" aria-labelledby="offcanvasLabel">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title" id="offcanvasLabel">Mehr Racing Action</h5>
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
            <ul class="nav flex-column">
                <li><a href="{{ path('public_index') }}" class="nav-link px-2 link-secondary">Home</a></li>
                <li><a href="{{ path('public_tracks') }}" class="nav-link px-2">Tracks</a></li>
                <li><a href="{{ path('public_organizers') }}" class="nav-link px-2">Veranstalter</a></li>
                <li><a href="{{ path('public_brands') }}" class="nav-link px-2">Firmen</a></li>
                <li><a href="{{ path('public_about') }}" class="nav-link px-2">About</a></li>
            </ul>
        </div>
    </div>

    <div class="">
        <a href="{{ path('public_index') }}" class="d-inline-flex link-body-emphasis text-decoration-none">
            {# <img src="{{ asset('images/logo.png') }}" height="32" /> #}
            <strong>Racing Action</strong>
        </a>
    </div>

    <div class="dropdown">
        <button class="btn btn-secondary rounded rounded-circle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
            <i class="fa-solid fa-user"></i>
        </button>
        <ul class="dropdown-menu">
            {% if app.user %}

                {% if is_granted('ROLE_ADMIN') %}
                    <li><a href="{{ path('admin_index') }}" role="button" class="dropdown-item">Admin</a></li>
                {% endif  %}
                
                <li><hr class="dropdown-divider"></li>
                <li><a href="{{ path('auth_login') }}" role="button" class="dropdown-item">Logout</a></li>
                
            {% else %}
                <li><a href="{{ path('auth_login') }}" role="button" class="dropdown-item">Login</a></li>
                <li><a href="{{ path('auth_login') }}" role="button" class="dropdown-item">Register</a></li>
            {% endif %}
            
        </ul>
    </div>

</header>
