{% extends 'admin/base.html.twig' %}

{% set items = {
    item_1: {
        name: 'Benutzer',
        icon: 'fas fa-user',
        text: 'Es sind Aktuell ' ~ users|length ~ ' Nutzer registriert.',
        action: {
            name: 'Neuer Nutzer',
            icon: 'fas fa-plus',
            path: path('admin_users_create'),
        },
    },

    item_2: {
        name: 'Events',
        icon: 'fas fa-calendar-days',
        text: 'Es sind Aktuell ' ~ events|length ~ ' Events registriert.',
        action: {
            name: 'Neues Event',
            icon: 'fas fa-plus',
            path: path('admin_index'),
        },
    }
} %}


{% block body %}
    <div class="row gap-3">
        {% for item in items %}
            <div class="col">
                <div class="border rounded shadow p-3">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h5 class="fs-2 text-body-emphasis">{{ item.name }}</h5>
                        <div class="d-flex fs-4 justify-content-center align-items-center text-bg-primary rounded p-3">
                            <i class="{{ item.icon }}"></i>
                        </div>
                    </div>
                    <div class="d-flex justify-content-between align-items-center">
                        <span>{{ item.text }}</span>
                        <a href="{{ item.action.path }}" class="btn btn-outline-primary btn-sm"><span><i class="{{ item.action.icon }} me-2"></i>{{ item.action.name }}</span></a>
                    </div>
                </div>
            </div>
        {% endfor %}
      </div>
{% endblock %}
