{% extends 'admin/base.html.twig' %}

{% block toolbar %}
    {{ component('Admin:Crud:Toolbar', {
        path: 'admin_users_',
        create: true,
    })  }}
{% endblock %}
    

{% block body %}
    
    {{ component('Admin:Crud:Index', {
        path: 'admin_users_',
        entities: users,
        selector: false,

        actions: {
            read: true,
            update: true,
        },

        properties: {
            id: {
                type: 'integerField',
                name: 'ID',
            },
            nickname: {
                type: 'stringField',
                name: 'Name',
            },
            email: {
                type: 'stringField',
                name: 'E-Mail',
            },
            roles: {
                type: 'badgeField',
                name: 'Roles',
            },
        },
    }) }}
    
{% endblock %}