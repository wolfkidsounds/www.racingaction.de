{% extends 'admin/base.html.twig' %}

{% block body %}
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ event.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ event.name }}</td>
            </tr>
            <tr>
                <th>DateTimeBegin</th>
                <td>{{ event.dateTimeBegin ? event.dateTimeBegin|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>DateTimeEnd</th>
                <td>{{ event.dateTimeEnd ? event.dateTimeEnd|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>IsOpenEnd</th>
                <td>{{ event.isOpenEnd ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}

{% block toolbar %}
    <a href="{{ path('admin_events_index') }}" class="btn btn-sm btn-outline-secondary"><i class="fas fa-arrow-left"></i></a>
    <a href="{{ path('admin_events_update', {'id': event.id}) }}" class="btn btn-sm btn-outline-secondary"><i class="fas fa-pen"></i></a>
    {{ include('admin/pages/events/_delete_form.html.twig') }}
{% endblock %}