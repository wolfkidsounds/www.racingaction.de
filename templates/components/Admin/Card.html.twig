

<div class="col" {{ attributes }}>
    <div class="border rounded shadow p-3">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h5 class="fs-2 text-body-emphasis">{{ item.name }}</h5>
            <div class="d-flex fs-4 justify-content-center align-items-center text-bg-{{ this.style }} rounded p-3">
                <i class="{{ item.icon }}"></i>
            </div>
        </div>
        <div class="d-flex justify-content-between align-items-center">
            {{ item.text }}
            <a href="{{ item.action.path }}" class="btn btn-outline-{{ this.style }} btn-sm"><i class="{{ item.action.icon }} me-2"></i>{{ item.action.name }}</a>
        </div>
    </div>
</div>